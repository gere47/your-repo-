{
  "name": "erp-school-backend",
  "version": "1.0.0",
  "description": "Sophor Technologies ERP - School Management System",
  "author": "Sophor Technologies",
  "license": "MIT",
  "scripts": {
    "prebuild": "npm run db:generate",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "clean": "rimraf dist",
    "test": "jest --config jest.simple.config.js",
    "test:watch": "jest --watch --config jest.simple.config.js",
    "test:coverage": "jest --coverage --config jest.simple.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:students": "jest src/students/students.service.spec.ts --config jest.simple.config.js",
    "test:auth": "jest src/auth/auth.service.spec.ts --config jest.simple.config.js",
    "test:attendance": "jest src/attendance/attendance.service.spec.ts --config jest.simple.config.js",
    "test:fees": "jest src/fees/fees.service.spec.ts --config jest.simple.config.js",
    "test:api": "node scripts/test-api.js",
    "test:comprehensive": "npm run test && npm run test:integration && npm run test:api",
    "build": "nest build",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "start:debug": "nest start --debug --watch"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.20",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.20",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/throttler": "^5.2.0",
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "nest-morgan": "^2.0.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "portfinder": "^1.0.38",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.25",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.35",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "axios": "^1.5.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsx": "^4.6.0",
    "typescript": "^5.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/*.spec.ts",
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.module.ts",
      "!src/main.ts"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/"
    }
  },
  "files.exclude": {
    "**/dist": true,
    "**/*.js": {
      "when": "*.ts"
    },
    "**/*.js.map": true
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}