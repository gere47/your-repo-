# Application
NODE_ENV=production
PORT=10000
API_PREFIX=/api/v1
FRONTEND_URL=https://your-frontend-domain.com

# Database - Render External Database
DATABASE_URL="postgresql://username:password@host:5432/database?sslmode=require"

# Security - GENERATE NEW SECRETS FOR PRODUCTION
JWT_SECRET=your-super-secure-production-jwt-secret-change-this
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Rate Limiting (Stricter in production)
THROTTLE_TTL=60000
THROTTLE_LIMIT=50

# Swagger
SWAGGER_TITLE="ERP School Management System API"
SWAGGER_DESCRIPTION="Complete School Management ERP System"
SWAGGER_VERSION=1.0.0
