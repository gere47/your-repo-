# Application
NODE_ENV=development
PORT=5000
API_PREFIX=/api/v1
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/database?schema=public"

# Security
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Swagger
SWAGGER_TITLE="ERP School Management System API"
SWAGGER_DESCRIPTION="Complete School Management ERP System"
SWAGGER_VERSION=1.0.0
